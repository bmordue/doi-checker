{
  "name": "doi-checker",
  "version": "1.0.0",
  "description": "Serverless DOI link checker with ActivityPub notifications",
  "main": "src/worker.js",
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "test": "vitest run",
    "test:watch": "vitest",
    "deploy": "./scripts/deploy.sh",
    "dev": "wrangler dev src/worker.js",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/ *.js *.json *.md",
    "format:check": "prettier --check src/ tests/ *.js *.json *.md",
    "check": "npm run lint && npm run format:check && npm test"
  },
  "keywords": [
    "doi",
    "link-checker",
    "activitypub",
    "cloudflare-workers"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@cloudflare/workers-types": "^4.20250903.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "eslint": "^9.34.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "@stryker-mutator/core": "^9.1.1",
    "@stryker-mutator/vitest-runner": "^9.1.1",
    "miniflare": "^4.20250829.0",
    "rollup": "^4.50.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-string": "^3.0.0",
    "vitest": "^3.2.4",
    "wrangler": "^4.33.2"
  }
}
